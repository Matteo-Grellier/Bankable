<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Bankable.ViewModels.BankAccounts"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Bankable.Views.BankAccounts.BankAccountsDashboardView"
             x:DataType="vm:BankAccountsDashboardViewModel">
    
    <Design.DataContext>
        <vm:BankAccountsDashboardViewModel/>
    </Design.DataContext>
    
    <Border Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="20">
            <StackPanel Orientation="Vertical" Spacing="20">
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Border Width="300" Height="200" CornerRadius="20" Background="{StaticResource White}" Padding="20">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="h1" Foreground="{StaticResource Yellow}"> Last spendings</TextBlock>
                            <TextBlock Classes="h2" Foreground="{StaticResource Green}" Text="{Binding Last3spendings[0]}"></TextBlock>
                            <TextBlock Classes="h2" Foreground="{StaticResource Green}" Text="{Binding Last3spendings[1]}"></TextBlock>
                            <TextBlock Classes="h2" Foreground="{StaticResource Green}" Text="{Binding Last3spendings[2]}"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Width="200" Height="200" CornerRadius="20" Background="{StaticResource Pink}" Padding="20">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="h1" Foreground="White"> Usefull</TextBlock>
                            <TextBlock Classes="h1" Foreground="White" Text="{Binding TotalUsefull}"></TextBlock>
                            <Sector></Sector>
                            <TextBlock Classes="h1" Foreground="White"> Useless</TextBlock>
                            <TextBlock Classes="h1" Foreground="White" Text="{Binding TotalUseless}"></TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Border Width="520" Height="300" CornerRadius="20" Background="{StaticResource White}" Padding="20">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Classes="h1" > Spending per category </TextBlock>
                        <ContentControl Width="500" Height="260" Content="{Binding DonutChartViewModel}"></ContentControl>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="20">
                <Border Width="520" Height="300" CornerRadius="20" Background="{StaticResource White}" Padding="20">
                    <ContentControl Width="500" Height="300" Content="{Binding SpendingLineViewModel}"></ContentControl>
                </Border>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Border Width="200" Height="200" CornerRadius="20" Background="{StaticResource Blue}" Padding="20">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="h1" Foreground="White" TextWrapping="Wrap"> Total of incomings</TextBlock>
                            <TextBlock Classes="h1" Foreground="White" Text="{Binding TotalIncomings}"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Width="300" Height="200" CornerRadius="20" Background="{StaticResource Green}" Padding="20">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="h1" Foreground="White"> Balance </TextBlock>
                            <TextBlock Classes="h1" Foreground="White" Text="{Binding Balance}"></TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
    
</UserControl>
